<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tbaehr.sharewifi">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />

    <application
        android:name=".ShareWiFiApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".features.infoTour.InfoTour"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBarLight">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".features.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBarLight">
        </activity>

        <activity
            android:name=".features.shareDialog.ShareOptionsActivity"
            android:theme="@style/AppTheme.NoActionBarLight" >
        </activity>

        <activity
            android:name=".features.shareDialog.ShareInfoActivity"
            android:theme="@style/AppTheme.NoActionBarLight">
        </activity>

        <receiver android:name="com.tbaehr.sharewifi.features.notificationOnConnect.ConnectionBroadcastReceiver" >
            <intent-filter android:priority="100">
                <action android:name="android.net.wifi.STATE_CHANGE" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
